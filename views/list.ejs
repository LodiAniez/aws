<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
  </style>
</head>
<body>
  <div class="w-screen h-screen bg-slate-700 flex flex-col items-center justify-center p-20">
    <div class="w-full grid grid-cols-4 gap-4"> <!-- Input section -->
      <div></div>
      <div class="col-span-2 flex justify-center">
        <div class="flex flex-col justify-center">
          <h3 class="text-3xl font-bold mb-8 text-white">Registered users</h3>
          <ul class="bg-white rounded-lg border border-gray-200 w-96 text-gray-900">
            <% if (typeof list !== "undefined" && list.length > 0) { %>
              <% list.forEach((item, index) => { %>
                <% if (index === 0) { %>
                  <li class="px-6 py-2 border-b border-gray-200 w-full rounded-t-lg"><%= item.firstName %> <%= item.lastName %></li>
                <% } else if (index > 0 && index != list.length-1) { %>
                  <li class="px-6 py-2 border-b border-gray-200 w-full"><%= item.firstName %> <%= item.lastName %></li>
                <% } else { %>
                  <li class="px-6 py-2 w-full rounded-b-lg"><%= item.firstName %> <%= item.lastName %></li>
                <% } %>
              <% }) %>
            <% } %>
          </ul>
        </div>
      </div>
      <div></div>
    </div>

    <!-- END -->
  </div>
</body>
</html>